@model FormReporting.Models.ViewModels.Metrics.CreateMetricDefinitionDto

<div class="row">
    <div class="col-12">
        <div class="mb-3">
            <label asp-for="ExpectedValue" class="form-label">Expected Value</label>
            <input asp-for="ExpectedValue" class="form-control" placeholder="e.g., 100, Yes, Active" maxlength="100" />
            <span asp-validation-for="ExpectedValue" class="text-danger"></span>
            <small class="text-muted">The expected or target value for this metric (used for compliance tracking).</small>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="mb-3">
            <label asp-for="ComplianceRule" class="form-label">
                Compliance Rule (JSON)
                <a href="#" data-bs-toggle="modal" data-bs-target="#complianceRuleModal" class="text-primary">
                    <i class="ri-question-line"></i>
                </a>
            </label>
            <textarea asp-for="ComplianceRule" class="form-control font-monospace" rows="6" placeholder='{"operator": ">=", "threshold": 90, "frequency": "daily"}'></textarea>
            <span asp-validation-for="ComplianceRule" class="text-danger"></span>
            <small class="text-muted">Optional JSON configuration for complex compliance rules.</small>
        </div>
    </div>
</div>

<!-- IsActive checkbox - only show in Edit mode -->
@if (ViewBag.IsEdit == true)
{
    <div class="row">
        <div class="col-12">
            <div class="mb-3">
                <div class="form-check form-switch form-switch-lg">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActive" checked />
                    <label class="form-check-label" for="IsActive">
                        <strong>Active</strong>
                    </label>
                </div>
                <small class="text-muted">Inactive metrics are hidden from forms and reports but data is retained.</small>
            </div>
        </div>
    </div>
}

<!-- Compliance Rule Help -->
<div class="card bg-light border-0">
    <div class="card-body">
        <h6 class="card-title mb-2"><i class="ri-code-s-slash-line me-1"></i>Compliance Rule Format</h6>
        <p class="small mb-2">Define complex validation rules using JSON. Common patterns:</p>
        
        <div class="mb-3">
            <strong class="small d-block mb-1">1. Simple Threshold Check:</strong>
            <pre class="bg-white p-2 rounded small mb-0"><code>{
  "operator": ">=",
  "threshold": 95,
  "message": "Uptime must be at least 95%"
}</code></pre>
        </div>

        <div class="mb-3">
            <strong class="small d-block mb-1">2. Range Check:</strong>
            <pre class="bg-white p-2 rounded small mb-0"><code>{
  "min": 50,
  "max": 100,
  "message": "Value must be between 50 and 100"
}</code></pre>
        </div>

        <div class="mb-3">
            <strong class="small d-block mb-1">3. Required Frequency:</strong>
            <pre class="bg-white p-2 rounded small mb-0"><code>{
  "frequency": "daily",
  "requiredDays": [1, 2, 3, 4, 5],
  "gracePeriod": "2 hours"
}</code></pre>
        </div>

        <div class="mb-0">
            <strong class="small d-block mb-1">4. Multiple Conditions:</strong>
            <pre class="bg-white p-2 rounded small mb-0"><code>{
  "conditions": [
    {"operator": ">=", "threshold": 90},
    {"maxConsecutiveFailures": 3}
  ],
  "logic": "AND"
}</code></pre>
        </div>
    </div>
</div>

<!-- Compliance Rule Modal -->
<div class="modal fade" id="complianceRuleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Compliance Rule Guide</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6>Available Operators:</h6>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Operator</th>
                            <th>Description</th>
                            <th>Example</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><code>=</code>, <code>==</code></td>
                            <td>Equals</td>
                            <td><code>{"operator": "=", "threshold": 100}</code></td>
                        </tr>
                        <tr>
                            <td><code>!=</code></td>
                            <td>Not equals</td>
                            <td><code>{"operator": "!=", "threshold": 0}</code></td>
                        </tr>
                        <tr>
                            <td><code>&gt;</code>, <code>&gt;=</code></td>
                            <td>Greater than (or equal)</td>
                            <td><code>{"operator": ">=", "threshold": 95}</code></td>
                        </tr>
                        <tr>
                            <td><code>&lt;</code>, <code>&lt;=</code></td>
                            <td>Less than (or equal)</td>
                            <td><code>{"operator": "<=", "threshold": 5}</code></td>
                        </tr>
                    </tbody>
                </table>

                <h6 class="mt-3">Frequency Options:</h6>
                <ul>
                    <li><code>daily</code> - Check must pass every day</li>
                    <li><code>weekly</code> - Check must pass once per week</li>
                    <li><code>monthly</code> - Check must pass once per month</li>
                    <li><code>quarterly</code> - Check must pass once per quarter</li>
                </ul>

                <div class="alert alert-info">
                    <i class="ri-information-line me-2"></i>
                    Leave empty if no complex compliance rules are needed. Simple thresholds can be handled in the KPI & Thresholds tab.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
