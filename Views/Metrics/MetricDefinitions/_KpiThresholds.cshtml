@model FormReporting.Models.ViewModels.Metrics.CreateMetricDefinitionDto

<div class="row">
    <div class="col-12">
        <div class="mb-4">
            <div class="form-check form-switch form-switch-lg">
                <input asp-for="IsKPI" class="form-check-input" type="checkbox" id="IsKPI" />
                <label class="form-check-label" for="IsKPI">
                    <strong>Mark as Key Performance Indicator (KPI)</strong>
                </label>
            </div>
            <small class="text-muted">KPIs are high-priority metrics that appear prominently in dashboards and reports.</small>
        </div>
    </div>
</div>

<div class="threshold-fields">
    <div class="alert alert-info border-0 mb-3" role="alert">
        <i class="ri-information-line me-2"></i>
        <strong>Threshold Logic:</strong> Define performance thresholds to automatically classify metric values as Green (Good), Yellow (Warning), or Red (Critical).
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="ThresholdGreen" class="form-label">
                    <span class="badge bg-success-subtle text-success me-1">Green</span> Threshold
                </label>
                <input asp-for="ThresholdGreen" type="number" step="0.01" class="form-control" placeholder="e.g., 90" />
                <span asp-validation-for="ThresholdGreen" class="text-danger"></span>
                <small class="text-muted">Good performance level</small>
            </div>
        </div>

        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="ThresholdYellow" class="form-label">
                    <span class="badge bg-warning-subtle text-warning me-1">Yellow</span> Threshold
                </label>
                <input asp-for="ThresholdYellow" type="number" step="0.01" class="form-control" placeholder="e.g., 70" />
                <span asp-validation-for="ThresholdYellow" class="text-danger"></span>
                <small class="text-muted">Warning level</small>
            </div>
        </div>

        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="ThresholdRed" class="form-label">
                    <span class="badge bg-danger-subtle text-danger me-1">Red</span> Threshold
                </label>
                <input asp-for="ThresholdRed" type="number" step="0.01" class="form-control" placeholder="e.g., 50" />
                <span asp-validation-for="ThresholdRed" class="text-danger"></span>
                <small class="text-muted">Critical level</small>
            </div>
        </div>
    </div>

    <!-- Threshold Examples -->
    <div class="card bg-light border-0 mt-2">
        <div class="card-body">
            <h6 class="card-title mb-2"><i class="ri-lightbulb-line me-1"></i>Threshold Examples</h6>
            
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-2 small"><strong>Higher is Better (e.g., Uptime %):</strong></p>
                    <ul class="small mb-3">
                        <li><span class="text-success">Green:</span> ≥ 95%</li>
                        <li><span class="text-warning">Yellow:</span> 90% - 94.9%</li>
                        <li><span class="text-danger">Red:</span> &lt; 90%</li>
                    </ul>
                </div>

                <div class="col-md-6">
                    <p class="mb-2 small"><strong>Lower is Better (e.g., Response Time):</strong></p>
                    <ul class="small mb-3">
                        <li><span class="text-success">Green:</span> ≤ 100ms</li>
                        <li><span class="text-warning">Yellow:</span> 101-200ms</li>
                        <li><span class="text-danger">Red:</span> &gt; 200ms</li>
                    </ul>
                </div>
            </div>

            <p class="mb-0 small text-muted">
                <i class="ri-information-line me-1"></i>
                The system uses these thresholds to color-code metric values in reports and dashboards.
            </p>
        </div>
    </div>

    <!-- Visual Threshold Indicator -->
    <div class="card border-0 mt-2" style="background: linear-gradient(to right, #dc3545 0%, #ffc107 50%, #198754 100%); height: 40px; border-radius: 8px;">
        <div class="card-body d-flex align-items-center justify-content-between text-white">
            <span class="small fw-semibold"><i class="ri-arrow-left-line"></i> Critical</span>
            <span class="small fw-semibold">Warning</span>
            <span class="small fw-semibold">Good <i class="ri-arrow-right-line"></i></span>
        </div>
    </div>
</div>
