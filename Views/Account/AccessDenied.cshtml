@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="page-heading mb-4">
    <h3 class="mb-1">Access Denied</h3>
    <p class="text-muted mb-0">You don't have permission to access this resource</p>
</div>

<div class="text-center">
    <div style="font-size: 100px; color: #324721; margin-bottom: 30px;">
        <i class="fas fa-ban"></i>
    </div>
    
    <p style="color: #6c757d; font-size: 18px; margin-bottom: 40px;">
        You don't have permission to access this resource.
    </p>

    <div class="alert alert-warning" style="text-align: left;">
        <i class="fas fa-info-circle me-2"></i>
        <strong>Why am I seeing this?</strong>
        <ul class="mb-0 mt-2">
            <li>You may not have the required role or permission</li>
            <li>Your account may not have access to this tenant</li>
            <li>The resource may be restricted to specific departments</li>
        </ul>
    </div>

    <div class="d-grid gap-3 mt-4">
        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-login">
            <i class="fas fa-home me-2"></i>
            Go to Dashboard
        </a>
        
        <a href="javascript:history.back()" class="btn btn-outline-secondary" style="height: 50px; border-radius: 10px; font-weight: 600;">
            <i class="fas fa-arrow-left me-2"></i>
            Go Back
        </a>
    </div>

    <div class="mt-4">
        <p class="text-muted small">
            <i class="fas fa-question-circle me-1"></i>
            Need help? Contact your system administrator
        </p>
    </div>
</div>
