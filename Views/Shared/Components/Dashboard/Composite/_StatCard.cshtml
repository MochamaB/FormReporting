@model StatCardConfig

@{
    var cardClasses = Model.Animate ? "card card-animate" : "card";
    if (!string.IsNullOrEmpty(Model.CssClass))
    {
        cardClasses += $" {Model.CssClass}";
    }

    var cardTag = !string.IsNullOrEmpty(Model.LinkUrl) ? "a" : "div";
    var hrefAttr = !string.IsNullOrEmpty(Model.LinkUrl) ? $"href=\"{Model.LinkUrl}\"" : "";
}

@if (Model.Variant == StatCardVariant.Standard)
{
    <div class="@cardClasses" id="stat-card-@Model.Id">
        <div class="card-body">
            <div class="d-flex justify-content-between">
                <div class="flex-grow-1">
                    <partial name="~/Views/Shared/Components/Dashboard/Atomic/_Label.cshtml"
                             model="Model.Label" />

                    <h2 class="mt-4 ff-secondary fw-semibold">
                        <partial name="~/Views/Shared/Components/Dashboard/Atomic/_Counter.cshtml"
                                 model="Model.Counter" />
                    </h2>

                    @if (Model.Trend != null)
                    {
                        <partial name="~/Views/Shared/Components/Dashboard/Composite/_TrendIndicator.cshtml"
                                 model="Model.Trend" />
                    }
                </div>

                <div class="flex-shrink-0 align-self-center">
                    <partial name="~/Views/Shared/Components/Dashboard/Atomic/_Icon.cshtml"
                             model="Model.Icon" />
                </div>
            </div>
        </div>
    </div>
}
else if (Model.Variant == StatCardVariant.Horizontal)
{
    <div class="@cardClasses" id="stat-card-@Model.Id">
        <div class="card-body">
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0 me-3">
                    <partial name="~/Views/Shared/Components/Dashboard/Atomic/_Icon.cshtml"
                             model="Model.Icon" />
                </div>

                <div class="flex-grow-1">
                    <partial name="~/Views/Shared/Components/Dashboard/Atomic/_Label.cshtml"
                             model="Model.Label" />

                    <h4 class="mb-0 ff-secondary fw-semibold mt-1">
                        <partial name="~/Views/Shared/Components/Dashboard/Atomic/_Counter.cshtml"
                                 model="Model.Counter" />
                    </h4>
                </div>

                @if (Model.Trend != null)
                {
                    <div class="flex-shrink-0 text-end">
                        <partial name="~/Views/Shared/Components/Dashboard/Composite/_TrendIndicator.cshtml"
                                 model="Model.Trend" />
                    </div>
                }
            </div>
        </div>
    </div>
}
else if (Model.Variant == StatCardVariant.Compact)
{
    <div class="@cardClasses" id="stat-card-@Model.Id">
        <div class="card-body">
            <partial name="~/Views/Shared/Components/Dashboard/Atomic/_Label.cshtml"
                     model="Model.Label" />

            <h3 class="mb-0 ff-secondary fw-bold mt-2">
                <partial name="~/Views/Shared/Components/Dashboard/Atomic/_Counter.cshtml"
                         model="Model.Counter" />
            </h3>

            @if (Model.Trend != null)
            {
                <div class="mt-2">
                    <partial name="~/Views/Shared/Components/Dashboard/Composite/_TrendIndicator.cshtml"
                             model="Model.Trend" />
                </div>
            }
        </div>
    </div>
}
else if (Model.Variant == StatCardVariant.IconLeft)
{
    <div class="@cardClasses" id="stat-card-@Model.Id">
        <div class="card-body">
            <div class="d-flex">
                <div class="flex-shrink-0 me-3">
                    <partial name="~/Views/Shared/Components/Dashboard/Atomic/_Icon.cshtml"
                             model="Model.Icon" />
                </div>

                <div class="flex-grow-1 overflow-hidden">
                    <partial name="~/Views/Shared/Components/Dashboard/Atomic/_Label.cshtml"
                             model="Model.Label" />

                    <h4 class="fs-22 fw-semibold ff-secondary mb-0 mt-1">
                        <partial name="~/Views/Shared/Components/Dashboard/Atomic/_Counter.cshtml"
                                 model="Model.Counter" />
                    </h4>

                    @if (Model.Trend != null)
                    {
                        <div class="mt-2">
                            <partial name="~/Views/Shared/Components/Dashboard/Composite/_TrendIndicator.cshtml"
                                     model="Model.Trend" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
