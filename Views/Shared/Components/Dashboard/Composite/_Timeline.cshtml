@model TimelineConfig

@if (Model.ShowCard)
{
    <div class="card @Model.CardClass">
        @if (!string.IsNullOrEmpty(Model.Title))
        {
            <div class="card-header">
                <h5 class="card-title mb-0">@Model.Title</h5>
            </div>
        }

        <div class="card-body">
            @await Html.PartialAsync("~/Views/Shared/Components/Dashboard/Composite/_TimelineContent.cshtml", Model)
        </div>
    </div>
}
else
{
    @await Html.PartialAsync("~/Views/Shared/Components/Dashboard/Composite/_TimelineContent.cshtml", Model)
}
