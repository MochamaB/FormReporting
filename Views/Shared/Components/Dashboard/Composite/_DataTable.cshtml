@model DataTableConfig

@functions {
    private void RenderTableContent()
    {
        <div class="@Model.ResponsiveClass">
            <table class="@Model.TableClass" id="table-@Model.Id">
                <thead class="table-light">
                    <tr>
                        @foreach (var column in Model.Columns)
                        {
                            <th scope="col"
                                @if (!string.IsNullOrEmpty(column.Width)) { <text>style="width: @column.Width"</text> }
                                class="text-@column.Alignment">
                                @column.Header
                                @if (column.Sortable)
                                {
                                    <i class="ri-arrow-up-down-line ms-1"></i>
                                }
                            </th>
                        }
                        @if (Model.Actions != null && Model.Actions.Any())
                        {
                            <th scope="col" class="text-end">Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model.Rows)
                    {
                        <tr>
                            @foreach (var column in Model.Columns)
                            {
                                <td class="text-@column.Alignment">
                                    @if (row.ContainsKey(column.Field))
                                    {
                                        var value = row[column.Field];

                                        if (column.RenderAsBadge && value != null)
                                        {
                                            var valueStr = value.ToString() ?? "";
                                            var badgeColor = column.BadgeColorMap?.ContainsKey(valueStr) == true
                                                ? column.BadgeColorMap[valueStr]
                                                : "primary";

                                            <span class="badge bg-@badgeColor-subtle text-@badgeColor">@value</span>
                                        }
                                        else
                                        {
                                            @value
                                        }
                                    }
                                </td>
                            }
                            @if (Model.Actions != null && Model.Actions.Any())
                            {
                                <td class="text-end">
                                    <div class="hstack gap-2 justify-content-end">
                                        @foreach (var action in Model.Actions)
                                        {
                                            var rowId = row.ContainsKey("Id") ? row["Id"]?.ToString() : "";
                                            var actionUrl = action.UrlPattern?.Replace("{id}", rowId);

                                            if (!string.IsNullOrEmpty(actionUrl))
                                            {
                                                <a href="@actionUrl" class="@action.ButtonClass">
                                                    @if (!string.IsNullOrEmpty(action.Icon))
                                                    {
                                                        <i class="@action.Icon"></i>
                                                    }
                                                    @action.Label
                                                </a>
                                            }
                                            else if (!string.IsNullOrEmpty(action.OnClick))
                                            {
                                                <button type="button"
                                                        class="@action.ButtonClass"
                                                        onclick="@action.OnClick.Replace("{id}", rowId)">
                                                    @if (!string.IsNullOrEmpty(action.Icon))
                                                    {
                                                        <i class="@action.Icon"></i>
                                                    }
                                                    @action.Label
                                                </button>
                                            }
                                        }
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

@if (Model.ShowCard)
{
    <div class="card @Model.CardClass">
        @if (!string.IsNullOrEmpty(Model.Title) || Model.ShowSearch)
        {
            <div class="card-header d-flex align-items-center">
                @if (!string.IsNullOrEmpty(Model.Title))
                {
                    <h5 class="card-title mb-0 flex-grow-1">@Model.Title</h5>
                }

                @if (Model.ShowSearch)
                {
                    <div class="flex-shrink-0">
                        <div class="search-box">
                            <input type="text" class="form-control search" placeholder="Search...">
                            <i class="ri-search-line search-icon"></i>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="card-body">
            @{ RenderTableContent(); }
        </div>

        @if (Model.ShowPagination && Model.TotalItems > Model.PageSize)
        {
            var totalPages = (int)Math.Ceiling((double)Model.TotalItems / Model.PageSize);

            <div class="card-footer">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted">
                        Showing @((Model.CurrentPage - 1) * Model.PageSize + 1)
                        to @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalItems)
                        of @Model.TotalItems entries
                    </div>

                    <nav aria-label="Table pagination">
                        <ul class="pagination pagination-sm mb-0">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="#" tabindex="-1">Previous</a>
                            </li>

                            @for (var i = 1; i <= totalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="#">@i</a>
                                </li>
                            }

                            <li class="page-item @(Model.CurrentPage == totalPages ? "disabled" : "")">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        }
    </div>
}
else
{
    RenderTableContent();
}
