@*
    Skeleton placeholder for data table
    Used during lazy loading
*@

@{
    var rows = ViewData["Rows"] != null ? (int)ViewData["Rows"] : 5;
}

<div class="card">
    <div class="card-header d-flex align-items-center">
        <!-- Title skeleton -->
        <div class="skeleton skeleton-text flex-grow-1" style="width: 30%; height: 20px;"></div>

        <!-- Search skeleton -->
        <div class="skeleton skeleton-text flex-shrink-0" style="width: 200px; height: 38px;"></div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table skeleton-table">
                <thead>
                    <tr>
                        <th><div class="skeleton skeleton-text" style="width: 80px;"></div></th>
                        <th><div class="skeleton skeleton-text" style="width: 100px;"></div></th>
                        <th><div class="skeleton skeleton-text" style="width: 90px;"></div></th>
                        <th><div class="skeleton skeleton-text" style="width: 70px;"></div></th>
                        <th><div class="skeleton skeleton-text" style="width: 60px;"></div></th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < rows; i++)
                    {
                        <tr>
                            <td><div class="skeleton skeleton-text"></div></td>
                            <td><div class="skeleton skeleton-text"></div></td>
                            <td><div class="skeleton skeleton-text"></div></td>
                            <td><div class="skeleton skeleton-text"></div></td>
                            <td><div class="skeleton skeleton-text" style="width: 50px;"></div></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
