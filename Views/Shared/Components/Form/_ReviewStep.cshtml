@model FormReporting.Models.ViewModels.Components.FormViewModel

@*
    Review/Complete Step - Summary of form submission
    Shows all sections and their field values for final review
*@

<div class="card border-0 shadow-sm">
    <div class="card-header bg-success bg-gradient text-white">
        <h5 class="card-title text-white mb-0">
            <i class="ri-check-double-line me-2"></i>Review Your Submission
        </h5>
    </div>
    <div class="card-body">
        <div class="alert alert-info border-0">
            <i class="ri-information-line me-2"></i>
            Please review your answers below. You can click on any section in the progress bar above to go back and edit your responses.
        </div>

        @* Summary of all sections *@
        @for (int i = 0; i < Model.Sections.Count; i++)
        {
            var templatesection = Model.Sections[i];
            var sectionNumber = i + 1;

            <div class="review-section mb-4">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h6 class="mb-0 text-primary">
                        <i class="@templatesection.IconClass me-2"></i>
                        @templatesection.SectionName
                    </h6>
                    <button type="button"
                            class="btn btn-sm btn-outline-secondary go-to-section"
                            data-step="@sectionNumber"
                            onclick="window.formWizard?.goToStep(@sectionNumber)">
                        <i class="ri-edit-line me-1"></i>Edit
                    </button>
                </div>

                @if (!string.IsNullOrEmpty(templatesection.SectionDescription))
                {
                    <p class="text-muted small mb-3">@templatesection.SectionDescription</p>
                }

                @* Field Summary Table *@
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 40%">Field</th>
                                <th style="width: 60%">Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var field in templatesection.Fields)
                            {
                                <tr>
                                    <td>
                                        <strong>@field.FieldName</strong>
                                        @if (field.IsRequired)
                                        {
                                            <span class="text-danger">*</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="review-field-value" data-field-id="@field.FieldId">
                                            @* Value will be populated by JavaScript *@
                                            <span class="text-muted fst-italic">
                                                <i class="ri-loader-4-line spinner-border spinner-border-sm me-1"></i>
                                                Loading...
                                            </span>
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @if (i < Model.Sections.Count - 1)
            {
                <hr class="my-4" />
            }
        }

        @* Submission Confirmation *@
        <div class="alert alert-warning border-0 mt-4">
            <div class="d-flex align-items-start">
                <i class="ri-error-warning-line me-2 fs-5"></i>
                <div>
                    <strong>Before you submit:</strong>
                    <ul class="mb-0 mt-2">
                        <li>Ensure all required fields are filled correctly</li>
                        <li>Review your responses for accuracy</li>
                        <li>Once submitted, you may not be able to edit this form</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@* Script to populate field values from form *@
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Wait a moment for wizard to be fully initialized
        setTimeout(populateReviewValues, 100);
    });

    function populateReviewValues() {
        const reviewFields = document.querySelectorAll('.review-field-value');

        reviewFields.forEach(fieldSpan => {
            const fieldId = fieldSpan.dataset.fieldId;
            if (!fieldId) return;

            // Find the input/select/textarea with this ID
            // Try multiple selector patterns: data-field-id, field_X id, responses[X] name
            const input = document.querySelector(
                `[data-field-id="${fieldId}"], ` +
                `#field_${fieldId}, ` +
                `[name="responses[${fieldId}]"], ` +
                `[name="field_${fieldId}"]`
            );

            if (!input) {
                fieldSpan.innerHTML = '<span class="text-muted fst-italic">Not answered</span>';
                return;
            }

            let value = '';

            // Handle different input types
            if (input.type === 'checkbox') {
                value = input.checked ?
                    '<span class="badge bg-success">Yes</span>' :
                    '<span class="badge bg-secondary">No</span>';
            }
            else if (input.type === 'radio') {
                // For radio buttons, search by name attribute patterns
                const radioName = input.name;
                const checked = document.querySelector(`[name="${radioName}"]:checked`);
                value = checked ? checked.value : '<span class="text-muted fst-italic">Not selected</span>';
            }
            else if (input.tagName === 'SELECT') {
                if (input.multiple) {
                    const selected = Array.from(input.selectedOptions).map(opt => opt.text);
                    value = selected.length > 0 ?
                        selected.map(s => `<span class="badge bg-primary me-1">${s}</span>`).join('') :
                        '<span class="text-muted fst-italic">None selected</span>';
                } else {
                    value = input.selectedOptions[0]?.text || '<span class="text-muted fst-italic">Not selected</span>';
                }
            }
            else if (input.type === 'file') {
                value = input.files.length > 0 ?
                    Array.from(input.files).map(f => f.name).join(', ') :
                    '<span class="text-muted fst-italic">No file selected</span>';
            }
            else {
                value = input.value || '<span class="text-muted fst-italic">Not answered</span>';
            }

            fieldSpan.innerHTML = value;
        });
    }

    // Re-populate values when returning to complete step
    document.addEventListener('wizardStepChanged', function(e) {
        if (e.detail && e.detail.isCompleteStep) {
            populateReviewValues();
        }
    });
</script>

<style>
    .review-section {
        padding: 1rem;
        border-radius: 8px;
        background: #fafbfe;
    }

    .review-section h6 {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .review-field-value {
        word-break: break-word;
    }

    .go-to-section {
        min-width: 80px;
    }

    .table td, .table th {
        vertical-align: middle;
    }
</style>
