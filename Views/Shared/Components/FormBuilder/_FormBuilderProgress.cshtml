@model FormReporting.Models.ViewModels.Components.FormBuilderProgressViewModel

@*
    Form Builder Progress Tracker

    Features:
    - Horizontal step indicator
    - Shows current progress
    - Clickable steps (if navigable)
    - Status indicators (pending, active, completed, error)
    - Exit button
    - Progress bar at bottom
*@

<style>
    .form-builder-progress {
        background: #fff;
        border-bottom: 2px solid #f3f3f9;
        padding-bottom: 3px; /* Space for absolute progress bar */
        position: -webkit-sticky;
        position: sticky;
        top: 0;
        z-index: 1020;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);

        /* Extend to edges of container-fluid (offset its padding) */
        width: calc(100% + 3rem);
        margin-left: -1.5rem;
        margin-right: -1.5rem;
        margin-top: -1.3rem;
        margin-bottom: 1.5rem;
    }

    .progress-step {
        flex: 1;
        position: relative;
        padding: 0.75rem 0.5rem 0.5rem 1.5rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .progress-step.navigable {
        cursor: pointer;
    }

    .progress-step.navigable:hover {
        background-color: #f8f9fa;
    }

    .progress-step.active {
        background-color: rgba(var(--vz-primary-rgb), 0.05);
    }

    .progress-step.completed {
        background-color: rgba(var(--vz-success-rgb), 0.03);
    }

    .progress-step.error {
        background-color: rgba(var(--vz-danger-rgb), 0.03);
    }

    .progress-step::after {
        content: '';
        position: absolute;
        top: 50%;
        right: -1px;
        width: 2px;
        height: 60%;
        background: #e9ecef;
        transform: translateY(-50%);
    }

    .progress-step:last-child::after {
        display: none;
    }

    .step-icon-wrapper {
        width: 50px;
        height: 50px;
        min-width: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        border: 2px solid #e9ecef;
        background: #fff;
    }

    .step-icon-wrapper i {
        font-size: 16px;
    }

    .progress-step.active .step-icon-wrapper {
        border-color: var(--vz-primary);
        background: rgba(var(--vz-primary-rgb), 0.1);
    }

    .progress-step.completed .step-icon-wrapper {
        border-color: var(--vz-success);
        background: rgba(var(--vz-success-rgb), 0.1);
    }

    .progress-step.error .step-icon-wrapper {
        border-color: var(--vz-danger);
        background: rgba(var(--vz-danger-rgb), 0.1);
    }

    /* Scope step-number to form-builder-progress only to avoid conflicts */
    .form-builder-progress .step-number {
        position: absolute;
        top: -8px;
        right: -8px;
        width: 24px;
        height: 24px;
        background: var(--vz-primary);
        color: white;
        border-radius: 50%;
        font-size: 12px;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid #fff;
    }

    .form-builder-progress .progress-step.completed .step-number {
        background: var(--vz-success);
    }

    .form-builder-progress .progress-step.error .step-number {
        background: var(--vz-danger);
    }

    .step-text-content {
        flex: 1;
    }

    .step-content {
        flex: 1;
        text-align: left;
    }

    .step-title {
        font-size: 13px;
        margin-bottom: 0.1rem;
        font-weight: 500;
        line-height: 1.2;
    }

    .step-description {
        font-size: 11px;
        color: #6c757d;
        line-height: 1.3;
    }

    .overall-progress {
        height: 3px;
        background: #e9ecef;
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        width: 100%;
    }

    .exit-button-wrapper {
        position: absolute;
        top: 12px;
        right: 20px;
        z-index: 10;
    }
</style>

<div class="form-builder-progress">
    @* Exit Button (Top Right) *@
    @if (Model.ShowExit)
    {
        <div class="exit-button-wrapper">
            <a href="@Model.ExitUrl" class="btn btn-light btn-sm" id="exitBtn">
                <i class="ri-close-line me-1"></i>Exit
            </a>
        </div>
    }

    @* Step Indicators *@
    <div class="d-flex">
        @foreach (var step in Model.Steps)
        {
            <div class="@step.StepClasses"
                data-step="@((int)step.Step)"
                @if (step.IsNavigable && step.NavigateUrl != null)
                {
                    <text>onclick="navigateToStep('@step.NavigateUrl')"</text>
                }>

                @* Step Icon *@
                <div class="step-icon-wrapper">
                    <i class="@step.IconClasses"></i>
                    <div class="step-number">@step.StepNumber</div>
                </div>

                @* Step Text Content *@
                <div class="step-text-content">
                    @* Step Title *@
                    <div class="@step.TitleClasses">@step.Title</div>

                    @* Step Description *@
                    <div class="step-description">@step.Description</div>
                </div>
            </div>
        }
    </div>

    @* Overall Progress Bar (Bottom) *@
    <div class="overall-progress">
        <div class="progress-bar @Model.ProgressBarClass"
             role="progressbar"
             style="width: @Model.ProgressPercentage%"
             aria-valuenow="@Model.ProgressPercentage"
             aria-valuemin="0"
             aria-valuemax="100">
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function navigateToStep(url) {
            // Check if there are unsaved changes
            if (typeof hasUnsavedChanges === 'function' && hasUnsavedChanges()) {
                if (!confirm('You have unsaved changes. Are you sure you want to leave?')) {
                    return;
                }
            }

            window.location.href = url;
        }

        // Save draft handler
        $(document).ready(function() {
            $('#saveDraftBtn').on('click', function() {
                if (typeof saveDraft === 'function') {
                    saveDraft();
                } else {
                    alert('Save draft functionality not implemented for this step');
                }
            });

            // Exit confirmation
            $('#exitBtn').on('click', function(e) {
                if (typeof hasUnsavedChanges === 'function' && hasUnsavedChanges()) {
                    if (!confirm('You have unsaved changes. Are you sure you want to exit?')) {
                        e.preventDefault();
                    }
                }
            });
        });
    </script>
}
