@model FormReporting.Models.ViewModels.Components.FormBuilderProgressViewModel

@*
    Form Builder Progress Tracker

    Features:
    - Horizontal step indicator
    - Shows current progress
    - Clickable steps (if navigable)
    - Status indicators (pending, active, completed, error)
    - Exit button
    - Progress bar at bottom
*@

<style>
    .form-builder-progress {
        background: #fff;
        border-bottom: 2px solid #f3f3f9;
        padding-bottom: 3px; /* Space for absolute progress bar */
        position: -webkit-sticky;
        position: sticky;
        top: 0;
        z-index: 1; /* Below sidebar (sidebar is typically z-index: 1000+) */
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);

        /* Extend to edges of container-fluid (offset its padding) */
        width: calc(100% + 3rem);
        margin-left: -1.5rem;
        margin-right: -1.5rem;
        margin-top: -1.3rem;
        margin-bottom: 0.5rem;
    }

    .progress-step {
        flex: 1;
        position: relative;
        padding: 0.75rem 0.5rem 0.5rem 1.5rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        border-bottom: 7px solid #e9ecef; /* Grey for pending/default */
    }

    .progress-step.navigable {
        cursor: pointer;
    }

    .progress-step.navigable:hover {
        background-color: #f8f9fa;
    }

    .progress-step.active {
        background-color: rgba(var(--vz-secondary-rgb), 0.08);
        border-bottom: 7px solid var(--vz-secondary); /* Secondary color for active */
    }

    .progress-step.completed {
        background-color: rgba(var(--vz-success-rgb), 0.03);
        border-bottom: 7px solid var(--vz-success); /* Green for completed */
    }

    .progress-step.error {
        background-color: rgba(var(--vz-danger-rgb), 0.03);
        border-bottom: 7px solid var(--vz-danger); /* Red for error */
    }

    .progress-step::after {
        content: '';
        position: absolute;
        top: 50%;
        right: -1px;
        width: 2px;
        height: 60%;
        background: #e9ecef;
        transform: translateY(-50%);
    }

    .progress-step:last-child::after {
        display: none;
    }

    .step-icon-wrapper {
        width: 50px;
        height: 50px;
        min-width: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        border: 2px solid #e9ecef;
        background: #fff;
    }

    .step-icon-wrapper i {
        font-size: 16px;
    }

    .progress-step.active .step-icon-wrapper {
        border-color: var(--vz-secondary);
        background: rgba(var(--vz-secondary-rgb), 0.1);
    }

    .progress-step.completed .step-icon-wrapper {
        border-color: var(--vz-success);
        background: rgba(var(--vz-success-rgb), 0.1);
    }

    .progress-step.error .step-icon-wrapper {
        border-color: var(--vz-danger);
        background: rgba(var(--vz-danger-rgb), 0.1);
    }

    /* Scope step-number to form-builder-progress only to avoid conflicts */
    .form-builder-progress .step-number {
        position: absolute;
        top: -8px;
        right: -8px;
        width: 24px;
        height: 24px;
        background: #b1b1b1; /* Grey for pending/inactive steps */
        color: white;
        border-radius: 50%;
        font-size: 12px;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid #fff;
    }

    .form-builder-progress .progress-step.active .step-number {
        background: var(--vz-secondary); /* Secondary color for active step */
    }

    .form-builder-progress .progress-step.completed .step-number {
        background: var(--vz-success);
    }

    .form-builder-progress .progress-step.error .step-number {
        background: var(--vz-danger);
    }

    .step-text-content {
        flex: 1;
    }

    .step-content {
        flex: 1;
        text-align: left;
    }

    .step-title {
        font-size: 13px;
        margin-bottom: 0.1rem;
        font-weight: 500;
        line-height: 1.2;
    }

    .step-description {
        font-size: 11px;
        color: #6c757d;
        line-height: 1.3;
    }

    /* Overall progress bar removed - using step bottom borders instead */
    .overall-progress {
        display: none;
    }

</style>

<div class="form-builder-progress">
    @* Step Indicators *@
    <div class="d-flex">
        @foreach (var step in Model.Steps)
        {
            <div class="@step.StepClasses"
                data-step="@((int)step.Step)"
                @if (step.IsNavigable && step.NavigateUrl != null)
                {
                    <text>onclick="navigateToStep('@step.NavigateUrl')"</text>
                }>

                @* Step Icon *@
                <div class="step-icon-wrapper">
                    @if (step.IsCompleted)
                    {
                        <i class="ri-checkbox-circle-fill text-success fs-20"></i>
                    }
                    else if (step.IsActive)
                    {
                        <i class="@step.Icon text-secondary fs-20"></i>
                    }
                    else
                    {
                        <i class="@step.Icon text-muted fs-20"></i>
                    }
                    @if (!step.IsCompleted)
                    {
                        <div class="step-number">@step.StepNumber</div>
                    }
                </div>

                @* Step Text Content *@
                <div class="step-text-content">
                    @* Step Title *@
                    <div class="@step.TitleClasses">@step.Title</div>

                    @* Step Description *@
                    <div class="step-description">@step.Description</div>
                </div>
            </div>
        }
    </div>

</div>

<!-- Exit Confirmation Modal -->
<div class="modal fade" id="exitConfirmModal" tabindex="-1" aria-labelledby="exitConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning-subtle">
                <h5 class="modal-title" id="exitConfirmModalLabel">
                    <i class="ri-alert-line me-2"></i>Confirm Exit
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="exitModalMessage" class="mb-0">
                    Are you sure you want to exit the Form Builder?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="ri-close-line me-1"></i>Cancel
                </button>
                <button type="button" class="btn btn-danger" id="confirmExitBtn">
                    <i class="ri-logout-box-line me-1"></i>Exit
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Info Modal (for save draft messages) -->
<div class="modal fade" id="infoModal" tabindex="-1" aria-labelledby="infoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info-subtle">
                <h5 class="modal-title" id="infoModalLabel">
                    <i class="ri-information-line me-2"></i>Information
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="infoModalMessage" class="mb-0"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">
                    <i class="ri-check-line me-1"></i>OK
                </button>
            </div>
        </div>
    </div>
</div>


