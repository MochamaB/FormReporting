@model FormReporting.Models.ViewModels.Components.FilterDropdownViewModel

@*
    FilterDropdown Component

    Features:
    - Simple dropdown filter
    - Navigates to URL with query string
    - Shows active filter with checkmark
    - Quick filtering without form submission
*@

<div class="dropdown">
    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="ri-filter-line me-1"></i>@Model.Label
    </button>
    <ul class="dropdown-menu" style="max-height: 250px; overflow-y: auto;">
        @foreach (var option in Model.Options)
        {
            <li>
                <a class="dropdown-item @(option.IsActive ? "active" : "")" href="@option.Url">
                    @if (option.IsActive)
                    {
                        <i class="ri-check-line me-1"></i>
                    }
                    @option.Text
                </a>
            </li>
        }
    </ul>
</div>
