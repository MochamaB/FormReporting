@* Velzon Sidebar Navigation *@
<!-- ========== App Menu ========== -->
<div class="app-menu navbar-menu">
    <!-- LOGO -->
    <div class="navbar-brand-box">
        <!-- Dark Logo-->
        <a href="@Url.Action("Index", "Home")" class="logo logo-dark">
            <span class="logo-sm">
                <img src="~/assets/images/ktdalogo-sm.png" alt="" height="37">
            </span>
            <span class="logo-lg">
                <img src="~/assets/images/ktdalogo-dark.png" alt="" height="72">
            </span>
        </a>
        <!-- Light Logo-->
        <a href="@Url.Action("Index", "Home")" class="logo logo-light">
            <span class="logo-sm">
                <img src="~/assets/images/ktdalogo-sm.png" alt="" height="37">
            </span>
            <span class="logo-lg">
                <img src="~/assets/images/ktdalogo-light.png" alt="" height="72">
            </span>
        </a>
        <button type="button" class="btn btn-sm p-0 fs-20 header-item float-end btn-vertical-sm-hover" id="vertical-hover">
            <i class="ri-record-circle-line"></i>
        </button>
    </div>

    <div id="scrollbar">
        <div class="container-fluid">

            <div id="two-column-menu">
            </div>

            @* Dynamic Sidebar Menu from Database *@
            @await Component.InvokeAsync("SidebarMenu")

        </div>
        <!-- Sidebar -->
    </div>

    <div class="sidebar-background"></div>
</div>
<!-- Left Sidebar End -->
<!-- Vertical Overlay-->
<div class="vertical-overlay"></div>
