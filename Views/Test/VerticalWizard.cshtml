@using FormReporting.Models.ViewModels.Components
@using FormReporting.Extensions
@{
    ViewData["Title"] = "Vertical Wizard Test";
    var wizard = ViewBag.VerticalWizard as WizardViewModel;
}

<!-- Page Title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Vertical Wizard Component Test</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Components</a></li>
                    <li class="breadcrumb-item"><a href="/ComponentTest/Wizards">Wizards</a></li>
                    <li class="breadcrumb-item active">Vertical Wizard</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Vertical Wizard Test -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="ri-layout-left-line text-primary me-2"></i>
                    Vertical Wizard - User Setup Example
                </h4>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">
                    2-column layout with modern vertical stepper and content area. 
                    Features icon-based steps with connecting lines and smooth transitions.
                    Ideal for simple workflows like user creation, role assignment, and configuration.
                </p>
                
                <div class="alert alert-info">
                    <i class="ri-information-line me-2"></i>
                    <strong>Interactive Demo:</strong> Click Next/Previous buttons or click directly on steps to navigate. 
                    Step states update automatically based on your position in the wizard.
                </div>
                
                <div class="form-steps">
                    <form id="@wizard.FormId" method="@wizard.FormMethod" action="@wizard.FormAction">
                        <partial name="~/Views/Shared/Components/Wizards/_VerticalWizard.cshtml" model="wizard" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

