@*
    Forms Overview - Dashboard placeholder
    Shows summary stats, recent activity, and quick actions
*@

<div class="row">
    <div class="col-12">
        <!-- Placeholder for Dashboard -->
        <div class="text-center py-5">
            <div class="d-flex flex-column align-items-center">
                <div class="avatar-lg mb-3">
                    <div class="avatar-title bg-primary-subtle text-primary rounded-circle fs-1">
                        <i class="ri-dashboard-line"></i>
                    </div>
                </div>
                <h5 class="text-muted mb-2">Dashboard Coming Soon</h5>
                <p class="text-muted mb-4" style="max-width: 400px;">
                    This section will display your forms overview including submission statistics, 
                    recent activity, upcoming deadlines, and quick actions.
                </p>
                
                <!-- Preview of what will be here -->
                <div class="row g-3 w-100" style="max-width: 800px;">
                    <div class="col-6 col-md-3">
                        <div class="card card-body text-center border-dashed">
                            <i class="ri-file-list-3-line text-primary fs-2 mb-2"></i>
                            <h6 class="text-muted mb-0 fs-12">Total Forms</h6>
                            <span class="text-muted fs-11">--</span>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="card card-body text-center border-dashed">
                            <i class="ri-draft-line text-warning fs-2 mb-2"></i>
                            <h6 class="text-muted mb-0 fs-12">Pending</h6>
                            <span class="text-muted fs-11">--</span>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="card card-body text-center border-dashed">
                            <i class="ri-checkbox-circle-line text-success fs-2 mb-2"></i>
                            <h6 class="text-muted mb-0 fs-12">Completed</h6>
                            <span class="text-muted fs-11">--</span>
                        </div>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="card card-body text-center border-dashed">
                            <i class="ri-error-warning-line text-danger fs-2 mb-2"></i>
                            <h6 class="text-muted mb-0 fs-12">Overdue</h6>
                            <span class="text-muted fs-11">--</span>
                        </div>
                    </div>
                </div>
                
                <!-- Quick action to go to Forms tab -->
                <div class="mt-4">
                    <a href="#forms-tab" class="btn btn-primary" data-bs-toggle="tab">
                        <i class="ri-file-list-3-line me-1"></i> Browse Available Forms
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-dashed {
        border: 2px dashed #e9ecef !important;
        background: #f8f9fa;
    }
</style>
