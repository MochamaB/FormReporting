<!-- Notification Details Offcanvas -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="notificationOffcanvas" aria-labelledby="notificationOffcanvasLabel">
    <div class="offcanvas-header bg-light">
        <h5 class="offcanvas-title" id="notificationOffcanvasLabel">Notification Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body p-0">
        <!-- Loading State -->
        <div id="notificationDetailLoading" class="text-center p-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading notification...</p>
        </div>

        <!-- Error State -->
        <div id="notificationDetailError" class="alert alert-danger m-3" style="display:none;">
            <i class="ri-error-warning-line me-2"></i>
            <span id="notificationDetailErrorMessage">Failed to load notification</span>
        </div>

        <!-- Notification Content -->
        <div id="notificationContent" style="display:none;">
            <!-- Header Section -->
            <div class="p-3 border-bottom">
                <div class="mb-3">
                    <h5 id="notificationTitle" class="mb-2"></h5>
                    <div class="d-flex flex-wrap gap-2">
                        <span id="notificationPriorityBadge" class="badge"></span>
                        <span id="notificationChannelBadge" class="badge bg-info-subtle text-info"></span>
                        <span id="notificationReadBadge" class="badge"></span>
                    </div>
                </div>

                <!-- Metadata -->
                <div class="text-muted small">
                    <div class="d-flex align-items-center mb-1">
                        <i class="ri-time-line me-2"></i>
                        <span id="notificationDate"></span>
                    </div>
                    <div class="d-flex align-items-center mb-1" id="notificationCategoryWrapper" style="display:none;">
                        <i class="ri-folder-line me-2"></i>
                        <span id="notificationCategory"></span>
                    </div>
                    <div class="d-flex align-items-center" id="notificationSourceWrapper">
                        <i class="ri-links-line me-2"></i>
                        <span id="notificationSource"></span>
                    </div>
                </div>
            </div>

            <!-- Message Body -->
            <div class="p-3">
                <div id="notificationMessage" class="notification-message">
                    <!-- HTML content will be inserted here -->
                </div>
            </div>

            <!-- Action Button Section -->
            <div class="p-3 border-top" id="notificationActionWrapper" style="display:none;">
                <a id="notificationActionButton" href="#" class="btn btn-primary w-100" target="_blank">
                    <i class="ri-external-link-line me-2"></i>
                    <span id="notificationActionText">View</span>
                </a>
            </div>

            <!-- Actions Footer -->
            <div class="offcanvas-footer border-top p-3 bg-light">
                <div class="d-grid gap-2">
                    <button type="button" id="markAsReadBtn" class="btn btn-soft-success">
                        <i class="ri-check-line me-2"></i>
                        Mark as Read
                    </button>
                    <button type="button" id="markAsUnreadBtn" class="btn btn-soft-secondary" style="display:none;">
                        <i class="ri-mail-unread-line me-2"></i>
                        Mark as Unread
                    </button>
                    <button type="button" id="deleteNotificationBtn" class="btn btn-soft-danger">
                        <i class="ri-delete-bin-line me-2"></i>
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Notification Message Styling */
.notification-message {
    line-height: 1.6;
    color: #495057;
}

.notification-message p {
    margin-bottom: 1rem;
}

.notification-message ul {
    padding-left: 1.5rem;
    margin-bottom: 1rem;
}

.notification-message strong {
    font-weight: 600;
    color: #212529;
}

.notification-message a {
    color: #0d6efd;
    text-decoration: underline;
}

.notification-message a:hover {
    color: #0a58ca;
}

/* Priority Badge Styles */
.badge.priority-urgent {
    background-color: #dc3545;
    color: white;
}

.badge.priority-high {
    background-color: #fd7e14;
    color: white;
}

.badge.priority-normal {
    background-color: #0d6efd;
    color: white;
}

.badge.priority-low {
    background-color: #6c757d;
    color: white;
}

/* Status Badge Styles */
.badge.status-unread {
    background-color: #ffc107;
    color: #000;
}

.badge.status-read {
    background-color: #198754;
    color: white;
}
</style>
