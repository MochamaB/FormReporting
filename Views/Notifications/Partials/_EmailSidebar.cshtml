@model FormReporting.Models.ViewModels.Notifications.EmailStatsDto

<div class="card">
    <div class="card-body">
        <h5 class="card-title mb-3">Mailbox</h5>

        <!-- Filter Buttons -->
        <div class="list-group list-group-flush">
            <a href="javascript:void(0);" class="list-group-item list-group-item-action active" id="filterAll" data-filter="all">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <i class="ri-mail-line me-2"></i> All Emails
                    </div>
                    <div class="flex-shrink-0">
                        <span class="badge bg-secondary-subtle text-secondary">@Model.AllEmailsCount</span>
                    </div>
                </div>
            </a>

            <a href="javascript:void(0);" class="list-group-item list-group-item-action" id="filterSent" data-filter="sent">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <i class="ri-mail-send-line me-2"></i> Sent
                    </div>
                    <div class="flex-shrink-0">
                        <span class="badge bg-success-subtle text-success">@Model.SentCount</span>
                    </div>
                </div>
            </a>

            <a href="javascript:void(0);" class="list-group-item list-group-item-action" id="filterPending" data-filter="pending">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <i class="ri-time-line me-2"></i> Pending
                    </div>
                    <div class="flex-shrink-0">
                        <span class="badge bg-warning-subtle text-warning">@Model.PendingCount</span>
                    </div>
                </div>
            </a>

            <a href="javascript:void(0);" class="list-group-item list-group-item-action" id="filterFailed" data-filter="failed">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <i class="ri-error-warning-line me-2"></i> Failed
                    </div>
                    <div class="flex-shrink-0">
                        <span class="badge bg-danger-subtle text-danger">@Model.FailedCount</span>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Category Filter (Optional) -->
<div class="card mt-3">
    <div class="card-body">
        <h6 class="card-title mb-3 text-muted text-uppercase">Categories</h6>
        <div class="list-group list-group-flush">
            <a href="javascript:void(0);" class="list-group-item list-group-item-action border-0 py-2" data-category="">
                <i class="ri-folder-line me-2 text-muted"></i> All Categories
            </a>
            <a href="javascript:void(0);" class="list-group-item list-group-item-action border-0 py-2" data-category="Forms">
                <i class="ri-file-text-line me-2 text-primary"></i> Forms
            </a>
            <a href="javascript:void(0);" class="list-group-item list-group-item-action border-0 py-2" data-category="Workflows">
                <i class="ri-flow-chart me-2 text-info"></i> Workflows
            </a>
            <a href="javascript:void(0);" class="list-group-item list-group-item-action border-0 py-2" data-category="System">
                <i class="ri-settings-3-line me-2 text-secondary"></i> System
            </a>
        </div>
    </div>
</div>
