@model FormReporting.Models.ViewModels.Notifications.EmailNotificationsViewModel

@{
    ViewData["Title"] = "Email Notifications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!-- Left Sidebar (Filters) -->
    <div class="col-md-3">
        <partial name="Partials/_EmailSidebar" model="Model.Stats" />
    </div>

    <!-- Right Side (Email List) -->
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <h5 class="card-title flex-grow-1 mb-0">Email Notifications</h5>
                    <div class="flex-shrink-0">
                        <button type="button" class="btn btn-soft-secondary btn-sm" id="refreshEmails">
                            <i class="ri-refresh-line align-bottom"></i> Refresh
                        </button>
                    </div>
                </div>

                <!-- Email List -->
                <div id="emailListContainer">
                    <div id="emailLoading" class="text-center p-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3 text-muted">Loading emails...</p>
                    </div>

                    <div id="emailList" style="display:none;">
                        <!-- Email items will be dynamically loaded here -->
                    </div>

                    <div id="emailEmpty" style="display:none;" class="text-center p-5">
                        <i class="ri-mail-line display-4 text-muted"></i>
                        <h5 class="mt-3">No emails found</h5>
                        <p class="text-muted">There are no email notifications to display.</p>
                    </div>
                </div>

                <!-- Pagination -->
                <div id="emailPagination" class="d-flex justify-content-between align-items-center mt-4" style="display:none;">
                    <div class="text-muted">
                        Showing <span id="emailStart">1</span> to <span id="emailEnd">20</span> of <span id="emailTotal">0</span> emails
                    </div>
                    <div>
                        <button type="button" class="btn btn-sm btn-soft-primary" id="prevPage" disabled>
                            <i class="ri-arrow-left-line"></i> Previous
                        </button>
                        <button type="button" class="btn btn-sm btn-soft-primary" id="nextPage">
                            Next <i class="ri-arrow-right-line"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Email Detail Offcanvas -->
<partial name="Partials/_EmailOffcanvas" />

@section Scripts {
    <script src="~/js/pages/notifications-email.js"></script>
}
