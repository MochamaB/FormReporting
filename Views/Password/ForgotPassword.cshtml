@model FormReporting.Models.ViewModels.Identity.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="page-heading mb-4">
    <h3 class="mb-1">Forgot Password?</h3>
    <p class="text-muted mb-0">Enter your email address and we'll send you a password reset link</p>
</div>

@if (!string.IsNullOrEmpty(ViewData["SuccessMessage"] as string))
{
    <div class="alert alert-success" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @ViewData["SuccessMessage"]
    </div>
}

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @ViewData["ErrorMessage"]
    </div>
}

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        <div asp-validation-summary="All" class="text-danger mb-0"></div>
    </div>
}

<form asp-action="ForgotPassword" asp-controller="Password" method="post">
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email Address</label>
        <input asp-for="Email" 
               type="email" 
               class="form-control" 
               placeholder="Enter your email address"
               autofocus />
        <span asp-validation-for="Email" class="text-danger small"></span>
    </div>

    <button type="submit" class="btn btn-login w-100">
        <i class="fas fa-paper-plane me-2"></i>
        Send Reset Link
    </button>
</form>

<div class="text-center mt-4">
    <a asp-action="Login" asp-controller="Account" class="forgot-password">
        <i class="fas fa-arrow-left me-1"></i>
        Back to Login
    </a>
</div>

<div class="text-center mt-3">
    <p class="text-muted small mb-0">
        <i class="fas fa-info-circle me-1"></i>
        The reset link will expire in 24 hours
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
