@model FormReporting.Models.ViewModels.Forms.FormCategoryEditViewModel
@using FormReporting.Extensions
@using FormReporting.Models.ViewModels.Components

@{
    ViewData["Title"] = "Create Form Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-8">
        @{
            // Configure the form using SimpleForms
            var formConfig = new SimpleFormConfig
            {
                FormId = "createFormCategoryForm",
                FormAction = "/Forms/FormCategories/Create",
                FormMethod = "POST",
                CardTitle = "Form Category Information",
                CardSubtitle = "Enter the details for the new form category",
                StyleType = FormStyleType.Standard,
                CancelButtonUrl = "/Forms/FormCategories",
                SubmitButtonText = "Create Category",
                WrapInCard = true,
                ShowResetButton = false
            };

            // Add form fields
            formConfig
                .WithTextField("CategoryName", "Category Name",
                    value: Model?.CategoryName,
                    isRequired: true,
                    placeholder: "e.g., Safety Forms",
                    helpText: "Descriptive name for the category (max 100 characters)",
                    columnClass: "col-md-6")
                .WithTextField("CategoryCode", "Category Code",
                    value: Model?.CategoryCode,
                    isRequired: true,
                    placeholder: "e.g., SAFETY",
                    helpText: "Unique code identifier (max 50 characters)",
                    columnClass: "col-md-6")
                .WithTextAreaField("Description", "Description",
                    value: Model?.Description,
                    rows: 4,
                    isRequired: false,
                    placeholder: "Enter a brief description of this category",
                    helpText: "Optional description (max 500 characters)")
                .WithIconPickerField("IconClass", "Icon Class",
                    value: Model?.IconClass,
                    isRequired: false,
                    columnClass: "col-md-6")
                .WithTextField("Color", "Color (Hex)",
                    value: Model?.Color,
                    isRequired: false,
                    placeholder: "e.g., #3B82F6",
                    helpText: "Hex color code for category badge (e.g., #FF5733)",
                    columnClass: "col-md-6")
                .WithNumberField("DisplayOrder", "Display Order",
                    value: Model?.DisplayOrder ?? 0,
                    min: 0,
                    max: 9999,
                    step: 1,
                    isRequired: true,
                    placeholder: "0",
                    helpText: "Order in which this category appears in lists",
                    columnClass: "col-md-6")
                .WithCheckboxField("IsActive", "Is Active",
                    isChecked: Model?.IsActive ?? true,
                    helpText: "Check to make this category available for use immediately");

            // Build the form
            var form = formConfig.BuildForm();
        }

        @* Render the form using SimpleForms partial *@
        <partial name="~/Views/Shared/Components/SimpleForms/_SimpleForm.cshtml" model="form" />
    </div>

    <div class="col-lg-4">
        @* Help Card *@
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="ri-information-line me-1"></i> Help</h5>
            </div>
            <div class="card-body">
                <h6>Creating a Form Category</h6>
                <p class="text-muted">Form categories help organize form templates by operational area or purpose.</p>

                <h6 class="mt-3">Field Requirements</h6>
                <ul class="text-muted small">
                    <li><strong>Category Name:</strong> Required, max 100 characters</li>
                    <li><strong>Category Code:</strong> Required, unique, max 50 characters</li>
                    <li><strong>Description:</strong> Optional, max 500 characters</li>
                    <li><strong>Icon Class:</strong> Optional, use Remix Icon classes</li>
                    <li><strong>Color:</strong> Optional, hex format (#RRGGBB)</li>
                    <li><strong>Display Order:</strong> Required, 0-9999</li>
                    <li><strong>Is Active:</strong> Only active categories appear in dropdowns</li>
                </ul>

                <h6 class="mt-3">Icon Examples</h6>
                <div class="text-muted small">
                    <div class="d-flex align-items-center mb-2">
                        <i class="ri-file-list-line me-2"></i>
                        <code>ri-file-list-line</code>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="ri-shield-check-line me-2"></i>
                        <code>ri-shield-check-line</code>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="ri-tools-line me-2"></i>
                        <code>ri-tools-line</code>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <i class="ri-folder-line me-2"></i>
                        <code>ri-folder-line</code>
                    </div>
                </div>

                <h6 class="mt-3">Color Examples</h6>
                <div class="text-muted small">
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge me-2" style="background-color: #3B82F6">&nbsp;&nbsp;&nbsp;</span>
                        <code>#3B82F6</code> (Blue)
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge me-2" style="background-color: #10B981">&nbsp;&nbsp;&nbsp;</span>
                        <code>#10B981</code> (Green)
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge me-2" style="background-color: #F59E0B">&nbsp;&nbsp;&nbsp;</span>
                        <code>#F59E0B</code> (Orange)
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="badge me-2" style="background-color: #EF4444">&nbsp;&nbsp;&nbsp;</span>
                        <code>#EF4444</code> (Red)
                    </div>
                </div>

                <div class="alert alert-info mt-3">
                    <i class="ri-lightbulb-line me-1"></i>
                    <strong>Tip:</strong> Use consistent naming conventions for category codes (e.g., SAFETY, QUALITY, MAINTENANCE)
                </div>
            </div>
        </div>

        @* Icon Reference Card *@
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0"><i class="ri-palette-line me-1"></i> Quick Reference</h5>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-2">
                    <strong>Browse Icons:</strong><br />
                    <a href="https://remixicon.com/" target="_blank" class="text-primary">
                        remixicon.com <i class="ri-external-link-line"></i>
                    </a>
                </p>
                <p class="text-muted small mb-0">
                    <strong>Color Picker:</strong><br />
                    <a href="https://htmlcolorcodes.com/color-picker/" target="_blank" class="text-primary">
                        HTML Color Picker <i class="ri-external-link-line"></i>
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
