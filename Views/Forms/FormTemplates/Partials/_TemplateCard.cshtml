@model FormReporting.Models.ViewModels.Forms.FormTemplateViewModel

@*
    Template Card - Redesigned with Configuration Progress
    
    - Header: Icon + Template Name | Status badge
    - Body: Description, Configuration Progress, Config Items (clickable)
    - Footer: Modified date + Actions dropdown
*@

<div class="card h-100 template-config-card mb-0">
    <!-- Card Header -->
    <div class="card-header border-bottom">
        <div class="d-flex align-items-center">

            <!-- Avatar / Icon -->
            <div class="flex-shrink-0 me-3">
                <div class="avatar-md">
                    <div class="avatar-title bg-primary-subtle text-primary rounded fs-22">
                        <i class="ri-file-list-3-line"></i>
                    </div>
                </div>
            </div>

            <!-- Title + Status (stacked) -->
            <div class="flex-grow-1 overflow-hidden">

                <!-- Template Title -->
                <h6 class="card-title mb-1 text-truncate" title="@Model.TemplateName">
                    <a href="@Url.Action("Details", "FormTemplates", new { id = Model.TemplateId })"
                       class="text-body">
                        @Model.TemplateName
                    </a>
                </h6>

                <!-- Status Badge (below title) -->
                <div>
                    @Html.Raw(Model.StatusBadge)
                </div>

            </div>

        </div>
    </div>
    
    <!-- Card Body -->
    <div class="card-body py-3">
        <!-- Description -->
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-muted small mb-3" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                @Model.Description
            </p>
        }
        else
        {
            <p class="text-muted small mb-3 fst-italic">No description available</p>
        }
        
        <!-- Configuration Progress -->
        <div class="config-progress-section mb-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="text-muted small fw-medium">Configuration</span>
                <span class="badge @(Model.ConfigurationPercentage == 100 ? "bg-success" : "bg-secondary-subtle text-secondary")">
                    @Model.ConfigurationLevel/4
                </span>
            </div>
            <div class="progress" style="height: 6px;">
                <div class="progress-bar @Model.ConfigurationProgressColor" 
                     role="progressbar" 
                     style="width: @(Model.ConfigurationPercentage)%"
                     aria-valuenow="@Model.ConfigurationPercentage" 
                     aria-valuemin="0" 
                     aria-valuemax="100">
                </div>
            </div>
        </div>
        
        <!-- Configuration Items (Clickable) -->
        <div class="config-items">
            <!-- Form Builder -->
            <a href="@(Model.PublishStatus == "Draft" ? Url.Action("Create", "FormTemplates", new { id = Model.TemplateId }) : Url.Action("Preview", "FormTemplates", new { id = Model.TemplateId }))" 
               class="config-item @(Model.HasFormBuilder ? "configured" : "not-configured")">
                <div class="config-item-icon">
                    <i class="ri-layout-3-line"></i>
                </div>
                <div class="config-item-content">
                    <span class="config-item-title">Form Builder</span>
                    <span class="config-item-detail">
                        @if (Model.HasFormBuilder)
                        {
                            @($"{Model.SectionCount} sections, {Model.FieldCount} fields")
                        }
                        else
                        {
                            <span class="text-muted">Not configured</span>
                        }
                    </span>
                </div>
                <div class="config-item-status">
                    @if (Model.HasFormBuilder)
                    {
                        <i class="ri-checkbox-circle-fill text-success"></i>
                    }
                    else
                    {
                        <i class="ri-checkbox-blank-circle-line text-muted"></i>
                    }
                </div>
            </a>
            
            <!-- Assignments -->
            <a href="@Url.Action("Assignments", "FormTemplates", new { id = Model.TemplateId })" 
               class="config-item @(Model.HasAssignments ? "configured" : "not-configured")">
                <div class="config-item-icon">
                    <i class="ri-user-add-line"></i>
                </div>
                <div class="config-item-content">
                    <span class="config-item-title">Assignments</span>
                    <span class="config-item-detail">
                        @if (Model.HasAssignments)
                        {
                            <span>Users assigned</span>
                        }
                        else
                        {
                            <span class="text-muted">Not configured</span>
                        }
                    </span>
                </div>
                <div class="config-item-status">
                    @if (Model.HasAssignments)
                    {
                        <i class="ri-checkbox-circle-fill text-success"></i>
                    }
                    else
                    {
                        <i class="ri-checkbox-blank-circle-line text-muted"></i>
                    }
                </div>
            </a>
            
            <!-- Workflow -->
            <a href="@Url.Action("Workflow", "FormTemplates", new { id = Model.TemplateId })" 
               class="config-item @(Model.HasWorkflow ? "configured" : "not-configured")">
                <div class="config-item-icon">
                    <i class="ri-flow-chart"></i>
                </div>
                <div class="config-item-content">
                    <span class="config-item-title">Workflow</span>
                    <span class="config-item-detail">
                        @if (Model.HasWorkflow)
                        {
                            <span>Approval workflow set</span>
                        }
                        else
                        {
                            <span class="text-muted">Not configured</span>
                        }
                    </span>
                </div>
                <div class="config-item-status">
                    @if (Model.HasWorkflow)
                    {
                        <i class="ri-checkbox-circle-fill text-success"></i>
                    }
                    else
                    {
                        <i class="ri-checkbox-blank-circle-line text-muted"></i>
                    }
                </div>
            </a>
            
            <!-- Metrics -->
            <a href="@Url.Action("Metrics", "FormTemplates", new { id = Model.TemplateId })" 
               class="config-item @(Model.HasMetrics ? "configured" : "not-configured")">
                <div class="config-item-icon">
                    <i class="ri-bar-chart-2-line"></i>
                </div>
                <div class="config-item-content">
                    <span class="config-item-title">Metrics</span>
                    <span class="config-item-detail">
                        @if (Model.HasMetrics)
                        {
                            <span>KPIs mapped</span>
                        }
                        else
                        {
                            <span class="text-muted">Not configured</span>
                        }
                    </span>
                </div>
                <div class="config-item-status">
                    @if (Model.HasMetrics)
                    {
                        <i class="ri-checkbox-circle-fill text-success"></i>
                    }
                    else
                    {
                        <i class="ri-checkbox-blank-circle-line text-muted"></i>
                    }
                </div>
            </a>
        </div>

         <!-- Info Rows -->
        <div class="border-top pt-2">

            <div class="d-flex flex-column">

                <!-- Code (single-line with truncation + tooltip) -->
                <div class="info-row d-flex align-items-center">
                    <span class="info-label me-1 fw-semibold">Code:</span>

                    <span class="info-value text-muted text-truncate code-ellipsis"
                        title="@Model.TemplateCode">
                        @Model.TemplateCode
                    </span>
                </div>

                <!-- Version (always new line) -->
                <div class="info-row d-flex align-items-center mt-1">
                    <span class="info-label me-1 fw-semibold">Version:</span>
                    <span class="info-value text-muted">@Model.Version</span>
                </div>

                <!-- Modified (always new line) -->
                <div class="info-row d-flex align-items-center mt-1">
                    <span class="info-label me-1 fw-semibold">Modified:</span>
                    <span class="info-value text-muted">@Model.ModifiedDateFormatted</span>
                </div>

            </div>

        </div>

    </div>
    
    <!-- Card Footer -->
    <div class="card-footer bg-transparent border-top">
        <div class="d-flex justify-content-between align-items-center">
            <div>
               
            </div>
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="ri-settings-3-line me-1"></i>Actions
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <!-- Primary Actions -->
                    @if (Model.PublishStatus == "Draft")
                    {
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Create", "FormTemplates", new { id = Model.TemplateId })">
                                <i class="ri-play-line me-2 text-primary"></i>Continue Editing
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Preview", "FormTemplates", new { id = Model.TemplateId })">
                                <i class="ri-eye-line me-2 text-secondary"></i>Preview
                            </a>
                        </li>
                    }
                    else if (Model.PublishStatus == "Published")
                    {
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Details", "FormTemplates", new { id = Model.TemplateId })">
                                <i class="ri-eye-line me-2 text-primary"></i>View Details
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Edit", "FormTemplates", new { id = Model.TemplateId })">
                                <i class="ri-git-branch-line me-2 text-warning"></i>Create New Version
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Index", "Submissions", new { templateId = Model.TemplateId })">
                                <i class="ri-file-list-3-line me-2 text-success"></i>View Submissions
                            </a>
                        </li>
                    }
                    
                    <li><hr class="dropdown-divider"></li>
                    
                    <!-- Configuration Links -->
                    <li class="dropdown-header">Configure</li>
                    <li>
                        <a class="dropdown-item" href="@(Model.PublishStatus == "Draft" ? Url.Action("Create", "FormTemplates", new { id = Model.TemplateId }) : Url.Action("Preview", "FormTemplates", new { id = Model.TemplateId }))">
                            <i class="ri-layout-3-line me-2"></i>Form Builder
                            @if (Model.HasFormBuilder) { <i class="ri-checkbox-circle-fill text-success ms-auto"></i> }
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Assignments", "FormTemplates", new { id = Model.TemplateId })">
                            <i class="ri-user-add-line me-2"></i>Assignments
                            @if (Model.HasAssignments) { <i class="ri-checkbox-circle-fill text-success ms-auto"></i> }
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Workflow", "FormTemplates", new { id = Model.TemplateId })">
                            <i class="ri-flow-chart me-2"></i>Workflow
                            @if (Model.HasWorkflow) { <i class="ri-checkbox-circle-fill text-success ms-auto"></i> }
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Metrics", "FormTemplates", new { id = Model.TemplateId })">
                            <i class="ri-bar-chart-2-line me-2"></i>Metrics
                            @if (Model.HasMetrics) { <i class="ri-checkbox-circle-fill text-success ms-auto"></i> }
                        </a>
                    </li>
                    
                    <li><hr class="dropdown-divider"></li>
                    
                    <!-- Other Actions -->
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Clone", "FormTemplates", new { id = Model.TemplateId })">
                            <i class="ri-file-copy-line me-2 text-info"></i>Clone
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
