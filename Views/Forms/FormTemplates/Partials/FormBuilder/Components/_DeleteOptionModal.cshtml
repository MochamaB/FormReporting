@*
    DELETE OPTION CONFIRMATION MODAL
    Beautiful modal for confirming option deletion
*@

<div class="modal fade" id="deleteOptionModal" tabindex="-1" aria-labelledby="deleteOptionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Header -->
            <div class="modal-header bg-danger bg-gradient">
                <h5 class="modal-title text-white" id="deleteOptionModalLabel">
                    <i class="ri-delete-bin-line me-2"></i>Delete Option
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <div class="text-center py-3">
                    <!-- Warning Icon -->
                    <i class="ri-error-warning-line text-danger" style="font-size: 4rem;"></i>

                    <!-- Title -->
                    <h5 class="mb-3 mt-3">Are you sure you want to delete this option?</h5>

                    <!-- Option Details -->
                    <div class="alert alert-light mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted small">Label:</span>
                            <strong id="deleteOptionLabel" class="ms-2">-</strong>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-1">
                            <span class="text-muted small">Value:</span>
                            <code id="deleteOptionValue" class="ms-2">-</code>
                        </div>
                    </div>

                    <!-- Warning Message -->
                    <p class="text-muted mb-0">
                        <small>
                            This will permanently delete this option from the field.
                            <br>
                            <strong class="text-danger">This action cannot be undone.</strong>
                        </small>
                    </p>
                </div>
            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    <i class="ri-close-line me-1"></i>Cancel
                </button>
                <button type="button" class="btn btn-danger" id="confirmDeleteOptionBtn">
                    <i class="ri-delete-bin-line me-1"></i>Delete Option
                </button>
            </div>

        </div>
    </div>
</div>
