@*
    Field Palette Component
    Displays all 21 field types organized by category in collapsible accordions
    Used in: Toolbox (draggable) and Section dropdown (clickable)
*@

<style>
    .field-palette-accordion .accordion-button {
        background-color: transparent !important;
        padding: 0.5rem 0;
        border: none;
        border-bottom: 1px solid #e9ebec;
        box-shadow: none !important;
    }
    .field-palette-accordion .accordion-button:not(.collapsed) {
        background-color: transparent !important;
        color: inherit;
    }
    .field-palette-accordion .accordion-button::after {
        width: 0.8rem;
        height: 0.8rem;
        background-size: 0.8rem;
    }
    .field-palette-accordion .accordion-item {
        border: none;
        background-color: transparent;
    }
    .field-palette-accordion .accordion-body {
        padding: 1.2rem 0;
    }
    .field-palette-accordion .accordion-header {
        background-color: transparent;
    }
</style>

<div class="accordion field-palette-accordion" id="fieldPaletteAccordion">

    <!-- INPUT FIELDS -->
    <div class="accordion-item field-category" data-category="input">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed text-uppercase small" type="button" 
                    data-bs-toggle="collapse" data-bs-target="#collapseInput" aria-expanded="false">
                <i class="ri-text me-1"></i> Input Fields
            </button>
        </h2>
        <div id="collapseInput" class="accordion-collapse collapse" data-bs-parent="#fieldPaletteAccordion">
            <div class="accordion-body">
                <div class="field-item draggable-field" data-field-type="Text">
                    <div class="d-flex align-items-center p-2 border rounded bg-light mb-2" style="cursor: move;">
                        <i class="ri-drag-move-line me-1 text-muted"></i>
                        <i class="ri-text fs-5 me-2 text-primary"></i>
                        <div class="flex-grow-1">
                            <strong class="small">Text</strong>
                            <p class="mb-0 text-muted" style="font-size: 0.7rem;">Single line text input</p>
                        </div>
                    </div>
                </div>
                <div class="field-item draggable-field" data-field-type="TextArea">
                    <div class="d-flex align-items-center p-2 border rounded bg-light mb-2" style="cursor: move;">
                        <i class="ri-drag-move-line me-1 text-muted"></i>
                        <i class="ri-file-text-line fs-5 me-2 text-primary"></i>
                        <div class="flex-grow-1">
                            <strong class="small">Text Area</strong>
                            <p class="mb-0 text-muted" style="font-size: 0.7rem;">Multi-line text input</p>
                        </div>
                    </div>
                </div>
                <div class="field-item draggable-field" data-field-type="Number">
                    <div class="d-flex align-items-center p-2 border rounded bg-light mb-2" style="cursor: move;">
                        <i class="ri-drag-move-line me-1 text-muted"></i>
                        <i class="ri-hashtag fs-5 me-2 text-primary"></i>
                        <div class="flex-grow-1">
                            <strong class="small">Number</strong>
                            <p class="mb-0 text-muted" style="font-size: 0.7rem;">Integer numbers</p>
                        </div>
                    </div>
                </div>
                <div class="field-item draggable-field" data-field-type="Decimal">
                    <div class="d-flex align-items-center p-2 border rounded bg-light mb-2" style="cursor: move;">
                        <i class="ri-drag-move-line me-1 text-muted"></i>
                        <i class="ri-function-line fs-5 me-2 text-primary"></i>
                        <div class="flex-grow-1">
                            <strong class="small">Decimal</strong>
                            <p class="mb-0 text-muted" style="font-size: 0.7rem;">Decimal numbers</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- DATE/TIME FIELDS -->
    <div class="accordion-item field-category" data-category="datetime">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed text-uppercase small" type="button" 
