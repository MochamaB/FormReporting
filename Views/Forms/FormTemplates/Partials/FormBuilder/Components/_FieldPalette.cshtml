@*
    Field Palette Component
    Displays all 21 field types organized by category
    Used in: Toolbox (draggable) and Section dropdown (clickable)
*@

<!-- INPUT FIELDS -->
<div class="field-category mb-3">
    <h6 class="text-muted text-uppercase small mb-2">
        <i class="ri-text me-1"></i> Input Fields
    </h6>

    <div class="field-item draggable-field" data-field-type="Text">
        <div class="d-flex align-items-center p-2 border rounded bg-light mb-2" style="cursor: move;">
            <i class="ri-drag-move-line me-1 text-muted"></i>
            <i class="ri-text fs-5 me-2 text-primary"></i>
            <div class="flex-grow-1">
                <strong class="small">Text</strong>
                <p class="mb-0 text-muted" style="font-size: 0.7rem;">Single line text input</p>
            </div>
        </div>
    </div>

    <div class="field-item draggable-field" data-field-type="TextArea">
        <div class="d-flex align-items-center p-2 border rounded bg-light mb-2" style="cursor: move;">
            <i class="ri-drag-move-line me-1 text-muted"></i>
            <i class="ri-file-text-line fs-5 me-2 text-primary"></i>
            <div class="flex-grow-1">
                <strong class="small">Text Area</strong>
                <p class="mb-0 text-muted" style="font-size: 0.7rem;">Multi-line text input</p>
            </div>
        </div>
    </div>

    <div class="field-item draggable-field" data-field-type="Number">
        <div class="d-flex align-items-center p-2 border rounded bg-light mb-2" style="cursor: move;">
            <i class="ri-drag-move-line me-1 text-muted"></i>
            <i class="ri-hashtag fs-5 me-2 text-primary"></i>
            <div class="flex-grow-1">
                <strong class="small">Number</strong>
                <p class="mb-0 text-muted" style="font-size: 0.7rem;">Integer numbers</p>
            </div>
        </div>
    </div>

    <div class="field-item draggable-field" data-field-type="Decimal">
        <div class="d-flex align-items-center p-2 border rounded bg-light mb-2" style="cursor: move;">
            <i class="ri-drag-move-line me-1 text-muted"></i>
            <i class="ri-function-line fs-5 me-2 text-primary"></i>
            <div class="flex-grow-1">
                <strong class="small">Decimal</strong>
                <p class="mb-0 text-muted" style="font-size: 0.7rem;">Decimal numbers</p>
            </div>
        </div>
    </div>
</div>

