@*
    Delete Section Confirmation Modal
    Confirms user wants to delete a section before proceeding
*@

<!-- Delete Section Modal -->
<div class="modal fade" id="deleteSectionModal" tabindex="-1" aria-labelledby="deleteSectionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger bg-gradient">
                <h5 class="modal-title text-white" id="deleteSectionModalLabel">
                    <i class="ri-delete-bin-line me-2"></i>Delete Section
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center py-3">
                    <div class="mb-3">
                        <i class="ri-error-warning-line text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h5 class="mb-3">Are you sure you want to delete this section?</h5>
                    <p class="text-muted mb-2">
                        <strong id="deleteSectionName" class="text-dark"></strong>
                    </p>
                    <p class="text-muted mb-0">
                        <small>
                            This will permanently delete the section and all its fields.
                            <br>
                            <strong class="text-danger">This action cannot be undone.</strong>
                        </small>
                    </p>
                </div>

                <!-- Field Count Warning -->
                <div id="deleteWarningFields" class="alert alert-warning d-none mt-3" role="alert">
                    <i class="ri-alert-line me-1"></i>
                    <strong>Warning:</strong> This section contains <span id="deleteFieldCount">0</span> field(s) that will also be deleted.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    <i class="ri-close-line me-1"></i>Cancel
                </button>
                <button type="button"
                        class="btn btn-danger"
                        id="confirmDeleteBtn"
                        onclick="confirmDeleteSection()">
                    <i class="ri-delete-bin-line me-1"></i>Delete Section
                </button>
            </div>
        </div>
    </div>
</div>
