@*
    Text Field Configuration Partial View
    Used for: Text, TextArea, Email, Phone, Url field types
    
    This partial is rendered statically and shown/hidden by JavaScript.
    Values are populated by FormBuilderConfiguration.populateConfigValues()
*@

<div id="config-text-fields" style="display: none;">
    <div class="mb-3">
        <div class="d-flex align-items-center mb-2">
            <i class="ri-text fs-5 text-primary me-2"></i>
            <h6 class="mb-0">Text Configuration</h6>
        </div>
        <small class="text-muted">Configure text input constraints and formatting</small>
    </div>

    <div class="row g-3">
        <!-- Min Length -->
        <div class="col-md-6">
            <label class="form-label">Minimum Length</label>
            <input type="number" class="form-control" id="config-minLength" min="0"
                   placeholder="No minimum" onchange="FormBuilderConfiguration.saveConfig('minLength', this.value)">
            <small class="text-muted">Minimum characters required</small>
        </div>

        <!-- Max Length -->
        <div class="col-md-6">
            <label class="form-label">Maximum Length</label>
            <input type="number" class="form-control" id="config-maxLength" min="1"
                   placeholder="No maximum" onchange="FormBuilderConfiguration.saveConfig('maxLength', this.value)">
            <small class="text-muted">Maximum characters allowed</small>
        </div>

        <!-- Rows (TextArea only) -->
        <div class="col-md-6" id="config-rows-group" style="display: none;">
            <label class="form-label">Visible Rows</label>
            <input type="number" class="form-control" id="config-rows" min="2" max="20"
                   placeholder="3" onchange="FormBuilderConfiguration.saveConfig('rows', this.value)">
            <small class="text-muted">Number of visible text lines</small>
        </div>

        <!-- Input Mask (Text, Phone only) -->
        <div class="col-12" id="config-inputMask-group">
            <label class="form-label">
                Input Mask 
                <span class="badge bg-secondary-subtle text-secondary">Optional</span>
            </label>
            <input type="text" class="form-control" id="config-inputMask"
                   placeholder="e.g., (###) ###-####" onchange="FormBuilderConfiguration.saveConfig('inputMask', this.value)">
            <small class="text-muted">
                Pattern for formatting input: <code>#</code> = digit, <code>A</code> = letter, <code>*</code> = any character
            </small>
        </div>

        <!-- Text Transform -->
        <div class="col-md-6">
            <label class="form-label">Text Transform</label>
            <select class="form-select" id="config-textTransform"
                    onchange="FormBuilderConfiguration.saveConfig('textTransform', this.value)">
                <option value="">None</option>
                <option value="uppercase">UPPERCASE</option>
                <option value="lowercase">lowercase</option>
                <option value="capitalize">Capitalize Each Word</option>
            </select>
            <small class="text-muted">Automatic text formatting</small>
        </div>

        <!-- Auto Trim -->
        <div class="col-md-6 d-flex align-items-end">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="config-autoTrim" checked
                       onchange="FormBuilderConfiguration.saveConfig('autoTrim', this.checked)">
                <label class="form-check-label" for="config-autoTrim">
                    Auto-trim Whitespace
                </label>
            </div>
        </div>
    </div>

    <!-- Field Type Specific Tips -->
    <div class="alert alert-light mt-3 mb-0 border" style="font-size: 0.85rem;">
        <div id="text-config-tip-text" style="display: none;">
            <i class="ri-information-line me-1 text-info"></i>
            <strong>Text Field:</strong> Single-line input for short text entries.
        </div>
        <div id="text-config-tip-textarea" style="display: none;">
            <i class="ri-information-line me-1 text-info"></i>
            <strong>Text Area:</strong> Multi-line input for longer text. Adjust "Visible Rows" to control height.
        </div>
        <div id="text-config-tip-email" style="display: none;">
            <i class="ri-mail-line me-1 text-info"></i>
            <strong>Email Field:</strong> Validates email format automatically. Input mask not applicable.
        </div>
        <div id="text-config-tip-phone" style="display: none;">
            <i class="ri-phone-line me-1 text-info"></i>
            <strong>Phone Field:</strong> Use input mask to enforce phone number format (e.g., <code>(###) ###-####</code>).
        </div>
        <div id="text-config-tip-url" style="display: none;">
            <i class="ri-link me-1 text-info"></i>
            <strong>URL Field:</strong> Validates URL format automatically. Input mask not applicable.
        </div>
    </div>
</div>
