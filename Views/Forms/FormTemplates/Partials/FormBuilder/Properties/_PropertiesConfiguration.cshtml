@model FormReporting.Models.ViewModels.Forms.FormBuilderViewModel

@*
    CONFIGURATION TAB: Layout and display settings
    - Section: Column layout, width, background, spacing
    - Field: Type-specific settings (validation limits, file types, etc.)
*@

<!-- Empty State (No Selection) -->
<div id="config-empty" class="text-center py-5">
    <img src="~/assets/images/svg/configurations.svg" alt="Configuration settings" class="mb-3" style="width: 180px; height: 180px; opacity: 0.8;">
    <p class="text-muted mt-3 mb-0">Select a section or field to configure</p>
    <small class="text-muted">Layout and display settings</small>
</div>

<!-- Section Configuration Form -->
<div id="config-section" style="display: none;">
    <div class="mb-3">
        <div class="d-flex align-items-center mb-3">
            <i class="ri-layout-grid-line fs-5 text-primary me-2"></i>
            <h6 class="mb-0">Section Layout</h6>
        </div>
    </div>

    <form id="sectionConfigForm">
        <!-- Column Layout -->
        <div class="mb-4">
            <label class="form-label small fw-semibold">Column Layout</label>
            <div class="row g-2">
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="config_columnLayout" id="config_col1" value="1" checked>
                        <label class="form-check-label small" for="config_col1">
                            <i class="ri-layout-line me-1"></i> Single Column
                        </label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="config_columnLayout" id="config_col2" value="2">
                        <label class="form-check-label small" for="config_col2">
                            <i class="ri-layout-column-line me-1"></i> Two Columns
                        </label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="config_columnLayout" id="config_col3" value="3">
                        <label class="form-check-label small" for="config_col3">
                            <i class="ri-layout-grid-line me-1"></i> Three Columns
                        </label>
                    </div>
                </div>
            </div>
            <small class="text-muted">How fields are arranged horizontally</small>
        </div>

        <!-- Section Width -->
        <div class="mb-4">
            <label class="form-label small fw-semibold">Section Width</label>
            <div class="row g-2">
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="config_sectionWidth" id="config_width100" value="100" checked>
                        <label class="form-check-label small" for="config_width100">
                            Full Width (100%)
                        </label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="config_sectionWidth" id="config_width80" value="80">
                        <label class="form-check-label small" for="config_width80">
                            Centered (80%)
                        </label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="config_sectionWidth" id="config_width60" value="60">
                        <label class="form-check-label small" for="config_width60">
                            Narrow (60%)
                        </label>
                    </div>
                </div>
            </div>
            <small class="text-muted">Container width for this section</small>
        </div>

        <!-- Background Style -->
        <div class="mb-4">
            <label class="form-label small fw-semibold">Background Style</label>
            <div class="row g-2">
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="config_backgroundStyle" id="config_bgTransparent" value="transparent" checked>
                        <label class="form-check-label small" for="config_bgTransparent">
                            Transparent (default)
                        </label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="config_backgroundStyle" id="config_bgLight" value="light">
                        <label class="form-check-label small" for="config_bgLight">
                            Light Gray
                        </label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="config_backgroundStyle" id="config_bgCard" value="card">
                        <label class="form-check-label small" for="config_bgCard">
                            White Card
                        </label>
                    </div>
                </div>
            </div>
            <small class="text-muted">Visual appearance of the section</small>
        </div>

        <!-- Show Section Number -->
        <div class="mb-4">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="config_showSectionNumber" checked>
                <label class="form-check-label small" for="config_showSectionNumber">
                    Display section number
                </label>
            </div>
            <small class="text-muted d-block ms-4">Shows "Section 1", "Section 2", etc.</small>
        </div>

        <!-- Spacing -->
        <div class="mb-4">
            <label class="form-label small fw-semibold">Spacing</label>

            <div class="row g-2">
                <div class="col-12">
                    <label for="config_topPadding" class="form-label small text-muted mb-1">Top Padding</label>
                    <select class="form-select form-select-sm" id="config_topPadding">
                        <option value="none">None</option>
                        <option value="small">Small (0.5rem)</option>
                        <option value="medium" selected>Medium (1rem)</option>
                        <option value="large">Large (1.5rem)</option>
                        <option value="xlarge">Extra Large (2rem)</option>
                    </select>
                </div>

                <div class="col-12">
                    <label for="config_bottomPadding" class="form-label small text-muted mb-1">Bottom Padding</label>
                    <select class="form-select form-select-sm" id="config_bottomPadding">
                        <option value="none">None</option>
                        <option value="small">Small (0.5rem)</option>
                        <option value="medium" selected>Medium (1rem)</option>
                        <option value="large">Large (1.5rem)</option>
                        <option value="xlarge">Extra Large (2rem)</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Save Button -->
        <div class="d-grid gap-2 mt-4">
            <button type="button"
                    class="btn btn-primary btn-sm"
                    onclick="saveSectionConfiguration()">
                <i class="ri-save-line me-1"></i>Save Configuration
            </button>
        </div>
    </form>
</div>

<!-- Field Configuration Form -->
<div id="config-field" style="display: none;">

    <!-- Options Manager (for Dropdown, Radio, Checkbox, MultiSelect) -->
    <div id="field-options-manager" style="display: none;">
        <div class="mb-2">
            <div class="d-flex align-items-center mb-2">
                <i class="ri-list-check fs-5 text-primary me-2"></i>
                <h6 class="mb-0">Field Options</h6>
            </div>
           
        </div>

        <!-- Template Selector Card -->
<div class="card border mb-3" style="background-color: #f8f9fa;border-left:3px solid var(--vz-secondary;">
    <div class="card-body p-3">

        <!-- Label + Tooltip Icon -->
        <div class="d-flex align-items-center gap-1 mb-2">
            <label class="form-check-label mb-0">Option Template</label>

            <i class="ri-question-line text-muted"
               data-bs-toggle="tooltip"
               title="Select a template to instantly apply pre-defined options"
               style="cursor: help; font-size: 1.1rem;"></i>
        </div>

        <!-- Template Select with Loading Spinner -->
        <div class="d-flex align-items-center gap-2">
            <select class="form-select" id="template-selector">
                <option value="">-- Select Template --</option>
            </select>

            <!-- Loading Spinner -->
            <div id="template-loading" class="spinner-border spinner-border-sm text-primary"
                 style="display: none;" role="status">
                <span class="visually-hidden">Applying...</span>
            </div>
        </div>

    </div>
</div>


        <!-- Options Table Container -->
        <div id="options-table-container">
            <!-- Action Buttons -->
            <div class="mb-3 d-flex gap-2 justify-content-end">
                <button type="button"
                        class="btn btn-primary"
                        id="add-option-btn"
                        onclick="addOption()">
                    <i class="ri-add-line me-1"></i>Add Option
                </button>
            </div>

            <!-- Options Table - Rendered from server via partial view (_OptionsTable.cshtml) -->
            <!-- This container is populated by AJAX call to /api/formbuilder/fields/{fieldId}/options/render -->
            <div id="options-table-wrapper">
                <!-- Loading placeholder - will be replaced when field is selected -->
                <div class="text-center text-muted py-4">
                    <i class="ri-loader-4-line ri-spin d-block mb-2" style="font-size: 1.5rem; opacity: 0.5;"></i>
                    <small>Select a field to view options</small>
                </div>
            </div>
        </div>

        <div class="alert alert-info mt-3 mb-0" style="font-size: 0.85rem;">
            <i class="ri-information-line me-1"></i>
            <strong>Tip:</strong> Use templates for common option sets (Yes/No, Ratings, etc.)
            or add custom options manually. Drag to reorder â€¢ Minimum 2 required
        </div>
    </div>

    <!-- Field-Specific Configuration (Number Fields) -->
    <div id="config-number-fields" style="display: none;">
        <div class="mb-3">
            <div class="d-flex align-items-center mb-2">
                <i class="ri-hashtag fs-5 text-primary me-2"></i>
                <h6 class="mb-0">Number Configuration</h6>
            </div>
            <small class="text-muted">Configure numeric input constraints and behavior</small>
        </div>

        <div class="row g-3">
            <!-- Min Value -->
            <div class="col-md-6">
                <label class="form-label">Minimum Value</label>
                <input type="number" class="form-control" id="config-minValue" step="any"
                       placeholder="No minimum" onchange="FormBuilderConfiguration.saveConfig('minValue', this.value)">
                <small class="text-muted">Smallest allowed value</small>
            </div>

            <!-- Max Value -->
            <div class="col-md-6">
                <label class="form-label">Maximum Value</label>
                <input type="number" class="form-control" id="config-maxValue" step="any"
                       placeholder="No maximum" onchange="FormBuilderConfiguration.saveConfig('maxValue', this.value)">
                <small class="text-muted">Largest allowed value</small>
            </div>

            <!-- Step -->
            <div class="col-md-6">
                <label class="form-label">Step / Increment</label>
                <input type="number" class="form-control" id="config-step" step="any"
                       placeholder="1" onchange="FormBuilderConfiguration.saveConfig('step', this.value)">
                <small class="text-muted">Increment value (e.g., 0.5, 1, 10)</small>
            </div>

            <!-- Decimal Places -->
            <div class="col-md-6">
                <label class="form-label">Decimal Places</label>
                <select class="form-select" id="config-decimalPlaces"
                        onchange="FormBuilderConfiguration.saveConfig('decimalPlaces', this.value)">
                    <option value="">Auto</option>
                    <option value="0">0 (integers only)</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
                <small class="text-muted">Number of decimal places</small>
            </div>

            <!-- Allow Negative -->
            <div class="col-12">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="config-allowNegative"
                           onchange="FormBuilderConfiguration.saveConfig('allowNegative', this.checked)">
                    <label class="form-check-label" for="config-allowNegative">
                        Allow Negative Numbers
                    </label>
                </div>
            </div>
        </div>
    </div>

    <!-- Field-Specific Configuration (Text Fields) - Rendered from partial -->
    @await Html.PartialAsync("~/Views/Forms/FormTemplates/Partials/FormBuilder/Properties/_TextFieldConfig.cshtml")

    <!-- Field-Specific Configuration (Media Fields) - Rendered from partial -->
    @await Html.PartialAsync("~/Views/Forms/FormTemplates/Partials/FormBuilder/Properties/_MediaFieldConfig.cshtml")

    <!-- Field-Specific Configuration (Rating/Slider Fields) - Rendered from partial -->
    @await Html.PartialAsync("~/Views/Forms/FormTemplates/Partials/FormBuilder/Properties/_RatingSliderConfig.cshtml")

    <!-- Field-Specific Configuration (Specialized Fields) - Rendered from partial -->
    @await Html.PartialAsync("~/Views/Forms/FormTemplates/Partials/FormBuilder/Properties/_SpecializedFieldConfig.cshtml")

    <!-- Field-Specific Configuration (Date/Time Fields) -->
    <div id="config-datetime-fields" style="display: none;">
        <div class="mb-3">
            <div class="d-flex align-items-center mb-2">
                <i class="ri-calendar-line fs-5 text-primary me-2"></i>
                <h6 class="mb-0">Date/Time Configuration</h6>
            </div>
            <small class="text-muted">Configure date and time constraints</small>
        </div>

        <div class="row g-3">
            <!-- Min Date -->
            <div class="col-md-6" id="config-minDate-group">
                <label class="form-label">Minimum Date</label>
                <input type="date" class="form-control" id="config-minDate"
                       onchange="FormBuilderConfiguration.saveConfig('minDate', this.value)">
                <small class="text-muted">Earliest allowed date</small>
            </div>

            <!-- Max Date -->
            <div class="col-md-6" id="config-maxDate-group">
                <label class="form-label">Maximum Date</label>
                <input type="date" class="form-control" id="config-maxDate"
                       onchange="FormBuilderConfiguration.saveConfig('maxDate', this.value)">
                <small class="text-muted">Latest allowed date</small>
            </div>

            <!-- Min Time -->
            <div class="col-md-6" id="config-minTime-group">
                <label class="form-label">Minimum Time</label>
                <input type="time" class="form-control" id="config-minTime"
                       onchange="FormBuilderConfiguration.saveConfig('minTime', this.value)">
                <small class="text-muted">Earliest allowed time</small>
            </div>

            <!-- Max Time -->
            <div class="col-md-6" id="config-maxTime-group">
                <label class="form-label">Maximum Time</label>
                <input type="time" class="form-control" id="config-maxTime"
                       onchange="FormBuilderConfiguration.saveConfig('maxTime', this.value)">
                <small class="text-muted">Latest allowed time</small>
            </div>

            <!-- Quick Options -->
            <div class="col-12">
                <label class="form-label small fw-semibold">Quick Options</label>
            </div>

            <!-- Disable Past Dates -->
            <div class="col-md-6" id="config-disablePastDates-group">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="config-disablePastDates"
                           onchange="FormBuilderConfiguration.handleDateQuickOption('disablePastDates', this.checked)">
                    <label class="form-check-label" for="config-disablePastDates">
                        Disable Past Dates
                    </label>
                </div>
                <small class="text-muted d-block ms-4">Only allow today and future dates</small>
            </div>

            <!-- Disable Future Dates -->
            <div class="col-md-6" id="config-disableFutureDates-group">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="config-disableFutureDates"
                           onchange="FormBuilderConfiguration.handleDateQuickOption('disableFutureDates', this.checked)">
                    <label class="form-check-label" for="config-disableFutureDates">
                        Disable Future Dates
                    </label>
                </div>
                <small class="text-muted d-block ms-4">Only allow today and past dates</small>
            </div>

            <!-- Default to Today -->
            <div class="col-12">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="config-defaultToToday"
                           onchange="FormBuilderConfiguration.saveConfig('defaultToToday', this.checked)">
                    <label class="form-check-label" for="config-defaultToToday">
                        Default to Today / Now
                    </label>
                </div>
                <small class="text-muted d-block ms-4">Pre-fill with current date/time when form loads</small>
            </div>
        </div>
    </div>

    <!-- No Configuration Message (for fields without special config) -->
    <div id="config-no-settings" style="display: none;">
        <div class="alert alert-info mb-0">
            <i class="ri-information-line me-2"></i>
            This field type does not have additional configuration options.
        </div>
    </div>
</div>
