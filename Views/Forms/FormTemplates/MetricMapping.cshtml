@model FormReporting.Models.Entities.Forms.FormTemplate
@using FormReporting.Models.ViewModels.Components
@using FormReporting.Extensions
@{
    Layout = "~/Views/Shared/_BuilderLayout.cshtml";
    ViewData["Title"] = "Metric Mapping - " + Model.TemplateName;
    var progress = ViewData["Progress"] as FormBuilderProgressViewModel;
}

<!-- ============================================================================ -->
<!-- PROGRESS TRACKER - Same component used by all wizard steps -->
<!-- ============================================================================ -->
<partial name="~/Views/Shared/Components/FormBuilder/_FormBuilderProgress.cshtml" model="progress" />

<!-- ============================================================================ -->
<!-- METRIC MAPPING HEADER -->
<!-- ============================================================================ -->
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="card-title mb-1">
                    <i class="ri-line-chart-line text-primary me-2"></i>
                    Metric Mapping
                </h4>
                <p class="text-muted mb-0">Map form fields to KPI metrics for automated reporting</p>
            </div>
            <div class="d-flex gap-2">
                <!-- Back to Form Builder -->
                <a href="@Url.Action("FormBuilder", "FormTemplates", new { id = Model.TemplateId })"
                   class="btn btn-soft-secondary btn-sm">
                    <i class="ri-arrow-left-line me-1"></i>
                    Back to Form Builder
                </a>
                
                <!-- Save Progress -->
                <button type="button" class="btn btn-soft-primary btn-sm" disabled>
                    <i class="ri-save-line me-1"></i>
                    Save Progress
                </button>
                
                <!-- Continue to Workflow -->
                <button type="button" class="btn btn-success btn-sm" disabled>
                    Continue to Approval Workflow
                    <i class="ri-arrow-right-line ms-1"></i>
                </button>
                
                <!-- Exit Builder -->
                @if (progress?.ShowExit == true)
                {
                    <a href="@progress.ExitUrl" 
                       class="btn btn-danger btn-sm">
                        <i class="ri-close-line me-1"></i>Exit Builder
                    </a>
                }
            </div>
        </div>
    </div>
    
    <div class="card-body">
        <!-- ============================================================================ -->
        <!-- PLACEHOLDER CONTENT -->
        <!-- ============================================================================ -->
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="ri-line-chart-line display-1 text-primary"></i>
            </div>
            <h3 class="mb-3">Metric Mapping - Coming Soon</h3>
            <p class="text-muted mb-4">
                This stage will allow you to map form fields to KPI metrics for automated reporting and analytics.
            </p>
            
            <!-- Template Info Card -->
            <div class="row justify-content-center mt-5">
                <div class="col-md-6">
                    <div class="card border">
                        <div class="card-body">
                            <h5 class="card-title mb-3">Template Information</h5>
                            <table class="table table-borderless mb-0">
                                <tbody>
                                    <tr>
                                        <td class="text-muted text-start">Template Name:</td>
                                        <td class="text-end fw-semibold">@Model.TemplateName</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted text-start">Template Code:</td>
                                        <td class="text-end fw-semibold">@Model.TemplateCode</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted text-start">Version:</td>
                                        <td class="text-end fw-semibold">v@Model.Version</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted text-start">Status:</td>
                                        <td class="text-end">
                                            <span class="badge bg-soft-warning text-warning">@Model.PublishStatus</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted text-start">Sections:</td>
                                        <td class="text-end fw-semibold">@Model.Sections.Count</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted text-start">Fields:</td>
                                        <td class="text-end fw-semibold">@Model.Items.Count</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Info Alert -->
            <div class="alert alert-info mt-4" role="alert">
                <i class="ri-information-line me-2"></i>
                <strong>Note:</strong> This is a placeholder view. Metric mapping functionality will be implemented in a future update.
                For now, you can skip this step and continue to the next stage.
            </div>
        </div>
    </div>
</div>
